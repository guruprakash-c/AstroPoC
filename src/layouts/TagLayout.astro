---
const allPosts = Object.values(import.meta.glob('../posts/*.md', { eager: true }));
const tags = [... new Set(allPosts.map((post:any) => post.frontmatter.tags).flat())];
---

<section class="tags">
    {
        tags.map((tag:any) => <span class="tag"><a href={`/tags/${tag}`}>{tag}</a></span>)
    }
</section>

<style>
  a {
    color: #00539F;
  }

  .tags {
    display: flex;
    flex-wrap: wrap;
  }

  .tag {
    margin: 0.25em;
    border: dotted 1px #a1a1a1;
    border-radius: .5em;
    padding: .5em 1em;
    font-size: 1.15em;
    background-color: #F8FCFD;
  }
</style>